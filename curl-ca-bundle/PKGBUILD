# Maintainer: Jeroen Ooms <jeroenooms@gmail.com>
# The ca-certificates package has too many dependencies. 
# This package just installs a ca file.

pkgname=curl-ca-bundle
pkgver=1
pkgrel=9002
pkgdesc="Lightweight alternative to ca-certificates"
arch=('any')
url="https://curl.haxx.se/ca/cacert.pem"
license=('GPL')
groups=('base')
source=(https://curl.haxx.se/ca/cacert.pem)
sha256sums=('SKIP')

package() {
  mkdir -p ${pkgdir}/usr/ssl/certs
  install -m644 ${srcdir}/cacert.pem ${pkgdir}/usr/ssl/certs/curl-ca-bundle.crt
}
